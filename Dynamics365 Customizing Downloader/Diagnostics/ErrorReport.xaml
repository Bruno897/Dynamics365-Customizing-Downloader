<Window x:Class="Dynamics365CustomizingDownloader.Diagnostics.ErrorReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamics365CustomizingDownloader.Diagnostics"
        mc:Ignorable="d"
        Title="ErrorReport" ResizeMode="NoResize" Height="385.931" Width="562.357">
    <Grid>
        <Label Content="Oh no, an error occured!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="221" FontSize="18"/>
        <TextBox x:Name="Tbx_ErrorMessage" Height="52" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,82,10,0" IsReadOnly="True" TextWrapping="Wrap" Text="No Errror Info" VerticalAlignment="Top"/>
        <Label Content="Error Message:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Tbx_StackTrace" Margin="10,171,10,51.667" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  TextWrapping="Wrap" Text="No Stack Trace"/>
        <Label Content="Stack Trace:" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Btn_close" Content="Close" HorizontalAlignment="Left" Margin="10,310,0,0" VerticalAlignment="Top" Width="88" Height="31" Click="Btn_close_Click"/>
        <Button x:Name="Btn_Report" Visibility="Visible" Content="Report Error" IsEnabled="False" HorizontalAlignment="Left" Margin="442,310,0,0" VerticalAlignment="Top" Width="104" Height="31"/>

    </Grid>
</Window>
