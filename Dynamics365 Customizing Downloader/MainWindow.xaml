<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:ctr="clr-namespace:Dynamics365CustomizingDownloader.Controls" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        x:Name="Win_MainWindow" 
        x:Class="Dynamics365CustomizingDownloader.MainWindow" 
        mc:Ignorable="d" Title="Dynamics Customizing Downloader" 
        Height="552.813"  Width="975.693" WindowStyle="SingleBorderWindow" >
    <Window.Resources>
        <!-- Data Template (applied to each bound task item in the task collection) -->
        <DataTemplate x:Key="myTaskTemplate">
            <Border Name="border" Padding="5" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=Name}" />
                    <TextBlock Grid.Row="1" Grid.Column="0" Padding="0,0,5,0" Text="Local Path:" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path=LocalPath}" />
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Button x:Name="btn_download" Content="Download" HorizontalAlignment="Left" Margin="294,66,0,0" VerticalAlignment="Top" Width="547" Click="Button_Click" Height="22" />

        <ctr:LoadingPanel x:Name="loadingPanel" IsLoading="{Binding PanelLoading}" Message="{Binding PanelMainMessage}" SubMessage="{Binding PanelSubMessage}" ClosePanelCommand="{Binding PanelCloseCommand}" Margin="0,0,-0.333,-0.333" Foreground="#FF494949" Height="67.248" VerticalAlignment="Bottom" />
        <Menu Height="21" VerticalAlignment="Top" Margin="0,0,-0.333,0" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem x:Name="Btn_OpenConnectionOverview" Header="Open Connection Overview" Click="Btn_OpenConnectionOverview_Click" />
                <MenuItem x:Name="Cbx_DebuggingEnabled" Header="Enable Debugging" IsCheckable="True" Click="Cbx_DebuggingEnabled_Click" />
                <Separator />
                <MenuItem Header="_Exit" Click="MenuItemExit_Click" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut" Command="Cut" />
                <MenuItem Header="_Copy" Command="Copy" />
                <MenuItem Header="_Paste" Command="Paste" />
            </MenuItem>
            <MenuItem Header="_Info">
                <MenuItem Header="_About" Click="MenuItemAbout_Click" />
                <MenuItem Header="_Updates" Click="MenuItemUpdate_Click" />
            </MenuItem>
        </Menu>
        <DataGrid x:Name="Dtg_Solutions" Margin="294,122,14,72" ItemsSource="{Binding}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding DownloadIsChecked}" Header="" />
                <DataGridTextColumn Binding="{Binding UniqueName}" Header="Unique Name" IsReadOnly="True" Width="250" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Solution Name" IsReadOnly="True" Width="200" />
                <DataGridTextColumn Binding="{Binding Version}" Header="CRM Version" IsReadOnly="True" Width="80"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding LocalVersion}" Header="Local Version" IsReadOnly="True" Width="80"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Margin="10,83,0,72" Width="279">
            <Label DockPanel.Dock="Top" FontSize="18" Margin="5" Content="Local Repositories:" />
            <ListBox x:Name="Lbx_Repos" ItemsSource="{Binding}" ItemTemplate="{StaticResource myTaskTemplate}" HorizontalContentAlignment="Stretch" IsSynchronizedWithCurrentItem="True" Margin="5,-5,5,0" Width="267" SelectionChanged="Lbx_Repos_SelectionChanged" />
        </DockPanel>
        <Button x:Name="Btn_OpenCreateNewConnection" Content="Create new Repository" HorizontalAlignment="Left" Margin="15,66,0,0" VerticalAlignment="Top" Width="149" Height="22" Click="Btn_OpenCreateNewConnection_Click"/>
    </Grid>
</Window>

